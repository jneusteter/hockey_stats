<% error = @team.errors.key?(:town) && @team.errors[:town].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :town, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :town, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:town) : "Ex: a simple text" %></span>
  </div>
</fieldset>
