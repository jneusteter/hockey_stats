<% error = @player.errors.key?(:jersey_number) && @player.errors[:jersey_number].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :jersey_number, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :jersey_number, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:jersey_number) : "Ex: a simple text" %></span>
  </div>
</fieldset>
