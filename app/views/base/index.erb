<h1>Atom Rep Players</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Player Name</th>
      <th>Goals</th>
      <th>Assist One</th>
      <th>Assist Two</th>
      <th>+/-</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td> <a href="/players/show/<%= player.id %>"><%= player.id %> <%= player.first_name %> <%= player.last_name %></a></td>
      <td><%= player.goals.count %></td>
      <td><%= total_assist_one(player.id) %></td>
      <td><%= total_assist_two(player.id) %></td>
      <td><%= PlusMinus.total_by_player(player.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
